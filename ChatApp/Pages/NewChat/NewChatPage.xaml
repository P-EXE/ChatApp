<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ChatApp.ViewModels"
             x:Class="ChatApp.Pages.NewChatPage"
             x:DataType="vm:NewChatVM">
  <Grid RowDefinitions="*,auto">
    <VerticalStackLayout Grid.Row="0">
      <Entry Text="{Binding Name}" Placeholder="Name"/>
      <Entry Text="{Binding Description}" Placeholder="Description"/>
      <Picker Title="Members"/>
    </VerticalStackLayout>
    <Button Grid.Row="1" Text="Create" IsEnabled="{Binding Available}" Command="{Binding CreateChatCommand}"/>
  </Grid>
</ContentPage>