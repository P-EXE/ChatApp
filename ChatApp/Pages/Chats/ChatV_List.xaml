<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ChatApp.ViewModels"
             x:Class="ChatApp.Views.ChatV_List"
             x:DataType="vm:ChatVM_List">
  <HorizontalStackLayout>
    <Image/>
    <VerticalStackLayout>
      <Label Text="{Binding Name}"/>
      <Label Text="{Binding LastMessage}"/>
    </VerticalStackLayout>
    <VerticalStackLayout>
      <Label Text="{Binding LastActivityDateTime}"/>
      <Label Text="{Binding UnreadMessagesCount}"/>
    </VerticalStackLayout>
  </HorizontalStackLayout>

</ContentView>
