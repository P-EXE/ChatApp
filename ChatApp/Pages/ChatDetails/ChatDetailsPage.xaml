<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ChatApp.ViewModels"
             xmlns:v="clr-namespace:ChatApp.Views"
             x:Class="ChatApp.Pages.ChatDetailsPage"
             x:DataType="vm:ChatDetailsVM">
  <Grid RowDefinitions="auto,*">
    <VerticalStackLayout Grid.Row="0">
      <Entry Text="{Binding Chat.Name}" Placeholder="Name"/>
      <Entry Text="{Binding Chat.Description}" Placeholder="Description"/>
      <Button Text="Add Member" Command="{Binding NavToUserSearchPageCommand}"/>
    </VerticalStackLayout>
    <ScrollView Grid.Row="1">
      <CollectionView ItemsSource="{Binding Chat.Users}">
        <CollectionView.ItemTemplate>
          <DataTemplate>
            <Label Text="Member"/>
            <v:ContactV/>
          </DataTemplate>
        </CollectionView.ItemTemplate>
      </CollectionView>
    </ScrollView>
  </Grid>
</ContentPage>