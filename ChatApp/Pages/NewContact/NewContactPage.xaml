<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:ChatApp.ViewModels"
             xmlns:v="clr-namespace:ChatApp.Views"
             xmlns:m="clr-namespace:ChatShared.Models;assembly=ChatShared"
             x:Class="ChatApp.Pages.NewContactPage"
             x:DataType="vm:NewContactVM">
  <Grid RowDefinitions="auto, *">
    <SearchBar Grid.Row="0" Text="{Binding SearchText}">
      <SearchBar.Behaviors>
        <toolkit:EventToCommandBehavior
          EventName="TextChanged"
          Command="{Binding SearchCommand}"
          />
      </SearchBar.Behaviors>
    </SearchBar>
    <CollectionView
      Grid.Row="1"
      SelectionMode="Single"
      ItemsSource="{Binding Users}"
      SelectedItem="{Binding SelectedUser}"
      SelectionChangedCommand="{Binding ShowDetailsCommand}">
      <CollectionView.ItemTemplate>
        <DataTemplate>
          <SwipeView>
            <v:ContactV/>
          </SwipeView>
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>
  </Grid>
</ContentPage>