<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ChatApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ChatApp"
    xmlns:pages="clr-namespace:ChatApp.Pages"
    xmlns:vm="clr-namespace:ChatApp.ViewModels"
    Shell.FlyoutBehavior="Disabled">

  <TabBar>
    <Tab Title="Chats">
      <ShellContent 
        ContentTemplate="{DataTemplate pages:ChatsPage}"
        Route="ChatsPage" />
    </Tab>
    <Tab Title="Contacts">
      <ShellContent 
        ContentTemplate="{DataTemplate pages:ContactsPage}"
        Route="ContactsPage" />
    </Tab>
    <Tab Title="Settings">
      <ShellContent 
        ContentTemplate="{DataTemplate pages:SettingsPage}"
        Route="SettingsPage" />
    </Tab>
    <Tab Title="Account">
      <ShellContent 
        ContentTemplate="{DataTemplate pages:RegisterPage}"
        Route="RegisterPage" />
    </Tab>
  </TabBar>

</Shell>
